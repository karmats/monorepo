{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "Monorepo with yarn",
  "repository": "git@github.com:karmats/monorepo.git",
  "author": "Mats Roshauw <mats.roshauw@appva.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ci": "yarn install --frozen-lockfile",
    "release": "yarn build:fundamentals && yarn build:vue-lib && changeset publish",
    "storybook": "yarn workspace example storybook",
    "build:packages": "yarn build:fundamentals && yarn build:vue-lib",
    "build:fundamentals": "yarn workspace @karmats/fundamentals build",
    "build:vue-lib": "yarn workspace @karmats/vue-lib build"
  },
  "workspaces": [
    "packages/*",
    "scripts/",
    "apps/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.26.2"
  }
}
